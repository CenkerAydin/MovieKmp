CREATE TABLE favorite_movies (
    id INTEGER NOT NULL PRIMARY KEY,
    title TEXT NOT NULL,
    posterPath TEXT,
    releaseDate TEXT NOT NULL,
    voteAverage REAL NOT NULL
);

-- Ã–rnek queryler
getAllFavoriteMovies:

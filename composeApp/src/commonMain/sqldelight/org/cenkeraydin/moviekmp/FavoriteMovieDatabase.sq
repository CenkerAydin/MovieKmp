getFavoriteMovieById:
SELECT * FROM favorite_movies
WHERE id = ?;

insertFavoriteMovie:
INSERT OR REPLACE INTO favorite_movies(id, title, posterPath, releaseDate, voteAverage)
VALUES (?, ?, ?, ?, ?);

deleteFavoriteMovie:
DELETE FROM favorite_movies WHERE id = ?;


